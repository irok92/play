{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                //"-c",
                "-g",
                //"-S",
                //"-mllvm",
                //"--x86-asm-syntax=att",
                //"-fverbose-asm",
                "-std=c++20",
                "-ferror-limit=0",
                "-I./",
                "-I./3rdparty/SDL3/include/",
                "./play/core/*.cpp",
                "./play/os/*.cpp",
                "./play_sdl3/*.cpp",
                "./examples/play_sdl3_example.cpp",
                "./3rdparty/SDL3/lib/x64/SDL3.lib",
                "-o./bin/play_sdl3.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": true,
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build_msvc",
            "type": "shell",
            "command": ".\\build.bat",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}\\"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": true,
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build_tests",
            "type": "shell",
            "command": "clang++",
            "args": [
                //"-c",
                "-g",
                "-shared",
                //"-S",
                //"-mllvm",
                //"--x86-asm-syntax=att",
                //"-fverbose-asm",
                "-std=c++20",
                "-ferror-limit=0",
                "-I./",
                "-I./3rdparty/SDL3/include/",
                "./play/core/*.cpp",
                "./play/os/*.cpp",
                "./play_tests/*.cpp",
                "-o./bin/play_tests.dll"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": true,
            },
            "problemMatcher": "$gcc"
        }
    ]
}